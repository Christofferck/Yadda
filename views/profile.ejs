<%- include ("includes/header") %>



<main>
	<section>


		<section>
			<div class="feature-photo">

				<figure>
					<img class="cover-photo" id="cover-photo" style="width: 100%; height: 400px; object-fit: cover;" src="<%-data.mainURL%>/<%- data.coverPhoto%>" />
				</figure>
				<div class="container-fluid">
					<div class="row merged">
						<div class="col-md-2">
							<div class="user-avatar">
								<figure>

									<img class="profile-image" id="profile-image" style="width: 100%; height: 150px; object-fit: cover;" src="<%-data.mainURL%>/<%- data.profileImage%>" />
									<% data.mainURL %>
								</figure>
							</div>
						</div>
						<div class="col-md-10">
							<div class="timeline-info">
							</div>
						</div>
					</div>
				</div>
			</div>
		</section>



	</section>
	<section id="profile-info-wrap">
		<div class="gap gray-bg">
			<div class="container-fluid">
				<div class="row">
					<div class="col-md-12">
						<div class="row" id="page-contents">

							<div class="col-md-3">

							</div>
							<div class="col-md-6">
								<div id="profile-info">


								<div>
									<h3><%= data.name %></h3>
										<button id="followBtn" type="button" name="button">Follow</button>
									<div>
										<p><%= data.dob %></p>
													<p><%= data.aboutMe %></p>
									</div>

								</div>
								<div id="followers">
									<p><a href="#" id="followingAmount"><span id="followingNr"></span><span id="followingTxt"> Following</span></a></p>
									<p><a href="#" id="followersAmount"><span id="followersNr"></span><span id="followersTxt"> Followers</span></a></p>
								</div>
								</div>
							</div>

							<div class="col-md-3">

							</div>
						</div>
					</div>
				</div>
			</div>
		</div>




	</section>
	<section>
		<div class="gap gray-bg">
			<div class="container-fluid">
				<div class="row">
					<div class="col-md-12">
						<div class="row" id="page-contents">

							<div class="col-md-3">
								<%- include ("includes/left-sidebar") %>
							</div>
							<div class="col-md-6">
								<div id="add-post-box"></div>
								<div class="loadMore" id="newsfeed">
								</div>
							</div>

							<div class="col-md-3">
								<%- include ("includes/right-sidebar") %>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>

</main>
	<script src="/public/js/timeline.js"></script>

<%- include ("includes/footer") %>
<script src="../../public/js/profile.js"></script>
